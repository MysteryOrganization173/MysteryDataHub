        function displayBundles(filter) {
            const container = document.getElementById('bundlesContainer');
            container.innerHTML = '';
            
            const filtered = filter === 'all' 
                ? allBundles 
                : allBundles.filter(b => b.network === filter);
            
            if (filtered.length === 0) {
                container.innerHTML = '<p class="text-center col-12">No bundles found</p>';
                return;
            }
            
            filtered.forEach(bundle => {
                const col = document.createElement('div');
                col.className = 'col-md-4 col-sm-6';
                
                const networkClass = bundle.network === 'mtn' ? 'mtn-card' : 
                                   bundle.network === 'airteltigo' ? 'airtel-card' : 'telecel-card';
                
                col.innerHTML = `
                    <div class="bundle-card ${networkClass}">
                        <div class="bundle-size">${bundle.size}</div>
                        <div class="bundle-network">
                            <i class="bi bi-wifi"></i> ${bundle.network.toUpperCase()}
                        </div>
                        <div class="bundle-price">₵${bundle.price.toFixed(2)}</div>
                        
                        <ul class="bundle-features">
                            <li><i class="bi bi-calendar-check"></i> ${bundle.validity}</li>
                            <li><i class="bi bi-clock"></i> ${bundle.instant ? '⚡ INSTANT Delivery' : '3-15min Delivery'}</li>
                            ${bundle.bigTime ? '<li><i class="bi bi-infinity"></i> No Expiry - BigTime</li>' : ''}
                        </ul>
                        
                        <div class="mt-3">
                            ${bundle.instant ? 
                                '<span class="badge-instant"><i class="bi bi-lightning"></i> INSTANT</span>' : 
                                '<span class="badge-express">3-15 MINUTES</span>'
                            }
                        </div>
                        
                        <button class="btn-buy" onclick="openBuyModal('${bundle.id}')">
                            <i class="bi bi-cart-plus me-1"></i> Buy Now
                        </button>
                    </div>
                `;
                
                container.appendChild(col);
            });
        }

        // Open buy modal
        function openBuyModal(bundleId) {
            selectedBundle = allBundles.find(b => b.id === bundleId);
            
            if (!selectedBundle) {
                alert("Bundle found! Please try again.");
                return;
            }
            
            document.getElementById('bundleInfo').innerHTML = `
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h5 class="mb-1">${selectedBundle.network.toUpperCase()} - ${selectedBundle.size}</h5>
                        <p class="text-muted mb-0">${selectedBundle.validity} • ${selectedBundle.instant ? '⚡ INSTANT' : '3-15min'} Delivery</p>
                        ${selectedBundle.bigTime ? '<small class="text-warning"><i class="bi bi-infinity"></i> No Expiry Bundle</small>' : ''}
                    </div>
                    <h4 class="text-success mb-0">₵${selectedBundle.price.toFixed(2)}</h4>
                </div>
            `;
            
            document.getElementById('modalPrice').textContent = `₵${selectedBundle.price.toFixed(2)}`;
            document.getElementById('paymentStatus').innerHTML = '';
            document.getElementById('phoneInput').value = '';
            document.getElementById('emailInput').value = '';
            
            modal.show();
        }

        // ==== PROCESS PAYMENT FUNCTION ====
        async function processPayment() {
            const phone = document.getElementById('phoneInput').value.trim();
            const email = document.getElementById('emailInput').value.trim() || 'customer@example.com';

            if (!phone || !selectedBundle) {
                alert('Please enter a phone number.');
                return;
            }

            // FIXED: Better Ghana phone number validation (accepts 024, 054, etc.)
            const phoneRegex = /^(0[2-9][0-9]{8}|233[2-9][0-9]{8})$/;
            if (!phoneRegex.test(phone)) {
                alert('Please enter a valid Ghana phone number (e.g., 0241234567, 0550123456)');
                return;
            }

            // Step 1: Create order on YOUR backend
            document.getElementById('paymentStatus').innerHTML = `
                <div class="alert alert-info">
                    <div class="spinner-border spinner-border-sm me-2"></div>
                    Creating your order...
                </div>
            `;

            try {
                // CORRECT: Using right backend URL
                const createOrderResp = await fetch('https://mysterydatahub-api.onrender.com/api/orders/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        bundleId: selectedBundle.id, // CRITICAL FIX: Must match backend expectation
                        recipientPhone: phone,
                        customerEmail: email,
                        amount: selectedBundle.price,
                        network: selectedBundle.network,
                        bundleSize: selectedBundle.size,
                        validity: selectedBundle.validity,
                        deliveryType: selectedBundle.instant ? 'instant' : 'express'
                    })
                });

                // Check if response is OK
                if (!createOrderResp.ok) {
                    throw new Error(`HTTP error! status: ${createOrderResp.status}`);
                }

                const orderData = await createOrderResp.json();

                if (!orderData.success) {
                    throw new Error(orderData.error || 'Failed to create order.');
                }

                // Step 2: Initialize PayStack payment with the order details
                document.getElementById('paymentStatus').innerHTML = `
                    <div class="alert alert-info">
                        <div class="spinner-border spinner-border-sm me-2"></div>
                        Redirecting to secure payment...
                    </div>
                `;

                // Use the order details from YOUR backend to initialize PayStack
                const handler = PaystackPop.setup({
                    key: orderData.publicKey || 'pk_live_f786738518503826805eb02c3c2ad945b62e5e8f',
                    email: email,
                    amount: orderData.amount, // Already in pesewas from backend
                    ref: orderData.reference || orderData.orderId,
                    metadata: {
                        orderId: orderData.orderId,
                        phone: phone,
                        bundle: selectedBundle.size
                    },
                    callback: function(response) {
                        // This callback is for browser redirects
                        console.log('Payment callback reference:', response.reference);
                        
                        // Show a waiting message
                        document.getElementById('paymentStatus').innerHTML = `
                            <div class="alert alert-warning">
                                <h6>⏳ Payment Submitted</h6>
                                <p>Your payment (Ref: ${response.reference}) is being verified...</p>
                                <p>Your ${selectedBundle.size} ${selectedBundle.network.toUpperCase()} bundle will be delivered to ${phone}</p>
                                <p>This usually takes 1-3 minutes.</p>
                                <a href="track-order.html?orderId=${orderData.orderId}" class="btn btn-primary btn-sm mt-2">
                                    Track Order Status
                                </a>
                            </div>
                        `;
                        
                        // Start checking order status
                        startCheckingOrderStatus(orderData.orderId);
                    },
                    onClose: function() {
                        document.getElementById('paymentStatus').innerHTML = `
                            <div class="alert alert-secondary">
                                <h6>Payment Incomplete</h6>
                                <p>You closed the payment window.</p>
                                <p>If you completed the payment, your order will still be processed.</p>
                                <p>Order ID: ${orderData.orderId}</p>
                                <a href="track-order.html?orderId=${orderData.orderId}" class="btn btn-sm btn-warning mt-1">
                                    Check Order Status
                                </a>
                            </div>
                        `;
                    }
                });

                handler.openIframe();

            } catch (error) {
                console.error('Payment initiation error:', error);
                document.getElementById('paymentStatus').innerHTML = `
                    <div class="alert alert-danger">
                        <h6>❌ Setup Failed</h6>
                        <p>${error.message}</p>
                        <p>Please try again or contact support if the problem persists.</p>
                        <button class="btn btn-sm btn-warning mt-1" onclick="processPayment()">Try Again</button>
                    </div>
                `;
            }
        }

        // Helper function to poll for order status updates - FIXED
        function startCheckingOrderStatus(orderId) {
            let checks = 0;
            const maxChecks = 30;
            const interval = setInterval(async () => {
                checks++;
                if (checks > maxChecks) {
                    clearInterval(interval);
                    document.getElementById('paymentStatus').innerHTML += `
                        <div class="alert alert-info mt-2">
                            <small>Still waiting? <a href="track-order.html?orderId=${orderId}" class="text-warning">Track your order here</a></small>
                        </div>
                    `;
                    return;
                }
                
                try {
                    const response = await fetch(`https://mysterydatahub-api.onrender.com/api/orders/${orderId}`);
                    
                    if (!response.ok) {
                        console.log('Failed to fetch order status');
                        return;
                    }
                    
                    const result = await response.json();
                    
                    if (result.success && result.order) {
                        const status = result.order.status;
                        const statusEl = document.querySelector('#paymentStatus .alert');
                        
                        if (statusEl) {
                            if (status === 'delivered' || status === 'completed') {
                                statusEl.className = 'alert alert-success';
                                statusEl.innerHTML = `
                                    <h6>✅ Bundle Delivered!</h6>
                                    <p>Check your phone <strong>${result.order.recipientPhone || phone}</strong>.</p>
                                    <p>Your ${result.order.bundleSize || selectedBundle.size} ${result.order.network || selectedBundle.network} bundle has been sent.</p>
                                    <p>Delivery time: ${new Date().toLocaleTimeString()}</p>
                                    <a href="track-order.html?orderId=${orderId}" class="btn btn-success btn-sm mt-1">
                                        View Receipt
                                    </a>
                                `;
                                clearInterval(interval);
                                
                            } else if (status === 'processing' || status === 'processing_api') {
                                statusEl.innerHTML = `
                                    <h6>⚙️ Delivering Your Bundle...</h6>
                                    <p>Payment confirmed. Sending data to <strong>${result.order.recipientPhone || phone}</strong>...</p>
                                    <div class="progress mt-2" style="height: 10px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 70%"></div>
                                    </div>
                                    <small>${checks * 5} seconds elapsed</small>
                                `;
                                
                            } else if (status === 'paid') {
                                statusEl.innerHTML = `
                                    <h6>✅ Payment Verified!</h6>
                                    <p>Starting bundle delivery to <strong>${result.order.recipientPhone || phone}</strong>...</p>
                                    <p>This usually takes 1-3 minutes.</p>
                                    <div class="progress mt-2" style="height: 10px;">
                                        <div class="progress-bar progress-bar-striped" style="width: 40%"></div>
                                    </div>
                                `;
                                
                            } else if (status === 'failed' || status === 'error') {
                                statusEl.className = 'alert alert-danger';
                                statusEl.innerHTML = `
                                    <h6>❌ Delivery Failed</h6>
                                    <p>${result.order.error || 'Please contact support for assistance.'}</p>
                                    <p>Your payment has been received. We'll process a refund if delivery fails.</p>
                                    <button class="btn btn-sm btn-warning" onclick="processPayment()">Try Again</button>
                                    <a href="track-order.html?orderId=${orderId}" class="btn btn-sm btn-secondary ms-1">
                                        View Details
                                    </a>
                                `;
                                clearInterval(interval);
                            }
                        }
                    }
                } catch (e) { 
                    console.log('Polling error, continuing...');
                }
            }, 5000);
        }

        // Filter function
        window.filterBundles = function(network) {
            displayBundles(network);
        };
    </script>
</body>
</html>
